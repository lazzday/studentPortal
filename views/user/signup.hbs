<body style="background-image: url(/images/background.jpg); background-size: 100%">
<div class="col d-flex justify-content-center">
    <div class="card" style="width: 18rem; background-color: rgba(255,0,29,0.76)">
        <img src="/images/noodle2.png" class="card-img-top" alt="...">
        <div class="card-body">
            <!--<h1 class="card-title" style="color: white; font-family: Impact; text-align: center">REGISTER</h1>-->
            {{#if hasErrors}}
                <div class="alert alert-danger">
                    {{# each messages}}
                        <p>{{this}}</p>
                    {{/each}}
                </div>
            {{/if}}
            <form action="/user/signup" method="post">
                <div class="form-group">
                    <!--<label for="email">email</label>-->
                    <input type="text" id="email" name="email" class="form-control" placeholder="E-mail">
                </div>
                <div class="form-group">
                    <!--<label for="password">Password</label>-->
                    <input type="password" id="password" name="password" class="form-control" placeholder="Password">
                </div>
                <input type="hidden" name="_csrf" value="{{ csrfToken }}">
                <button type="submit" class="btn btn-primary">Register
                </button>
            </form>
        </div>
    </div>
</div>
</body>